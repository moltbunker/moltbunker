# Development Dockerfile with hot reload
FROM golang:1.24-alpine

RUN apk add --no-cache \
    git \
    ca-certificates \
    tor \
    bash

# Install air for hot reload
RUN go install github.com/air-verse/air@latest

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source
COPY . .

# Expose ports
EXPOSE 9000 9050 9051

# Use air for hot reload
CMD ["air", "-c", ".air.toml"]
