# Moltbunker Environment Configuration
# Copy this file to .env and modify as needed

# ===================
# Daemon Configuration
# ===================

# P2P port for daemon communication
MOLTBUNKER_PORT=9000

# Data directory for all moltbunker data
MOLTBUNKER_DATA_DIR=~/.moltbunker

# Log level: debug, info, warn, error
MOLTBUNKER_LOG_LEVEL=info

# ===================
# P2P Network
# ===================

# Bootstrap nodes (comma-separated multiaddrs)
# Example: /ip4/1.2.3.4/tcp/9000/p2p/QmBootstrapNodeID
MOLTBUNKER_BOOTSTRAP_NODES=

# Network mode: clearnet, tor_only, hybrid
MOLTBUNKER_NETWORK_MODE=hybrid

# ===================
# Tor Configuration
# ===================

# Enable Tor integration
MOLTBUNKER_TOR_ENABLED=false

# Tor SOCKS5 proxy port
MOLTBUNKER_TOR_SOCKS_PORT=9050

# Tor control port
MOLTBUNKER_TOR_CONTROL_PORT=9051

# Preferred exit node country (2-letter code, e.g., US, DE)
MOLTBUNKER_TOR_EXIT_COUNTRY=

# ===================
# Container Runtime
# ===================

# Default CPU quota (microseconds per 100ms period)
MOLTBUNKER_CONTAINER_CPU_QUOTA=100000

# Default memory limit (bytes)
MOLTBUNKER_CONTAINER_MEMORY_LIMIT=536870912

# Default disk limit (bytes)
MOLTBUNKER_CONTAINER_DISK_LIMIT=10737418240

# containerd socket path
MOLTBUNKER_CONTAINERD_SOCKET=/run/containerd/containerd.sock

# ===================
# Redundancy
# ===================

# Number of replicas for each container
MOLTBUNKER_REPLICA_COUNT=3

# Health check interval
MOLTBUNKER_HEALTH_CHECK_INTERVAL=30s

# ===================
# Payment (Base Network)
# ===================

# Payment contract address on Base network
MOLTBUNKER_PAYMENT_CONTRACT=

# Staking contract address on Base network
MOLTBUNKER_STAKING_CONTRACT=

# Base network RPC URL
MOLTBUNKER_BASE_RPC_URL=https://mainnet.base.org

# Minimum stake amount (in BUNKER tokens)
MOLTBUNKER_MIN_STAKE=1000000000000000000

# ===================
# IPFS
# ===================

# IPFS API URL
MOLTBUNKER_IPFS_API=http://localhost:5001

# ===================
# Development
# ===================

# Enable mock mode for payment contracts (development only)
MOLTBUNKER_MOCK_PAYMENTS=false

# Enable verbose debugging
MOLTBUNKER_DEBUG=false
